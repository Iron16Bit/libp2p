{
  "name": "@libp2p/example-browser-pubsub-workspace",
  "version": "1.0.0",
  "description": "LibP2P browser pubsub example with modular relay/peer architecture",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/libp2p/js-libp2p-example-browser-pubsub#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/libp2p/js-libp2p-examples.git"
  },
  "bugs": {
    "url": "https://github.com/libp2p/js-libp2p-examples/issues"
  },
  "type": "module",
  "private": true,
  "workspaces": [
    "relay",
    "peer"
  ],
  "scripts": {
    "install:relay": "cd relay && npm install",
    "install:peer": "cd peer && npm install", 
    "install:all": "npm run install:relay && npm run install:peer",
    "start:relay": "cd relay && npm start",
    "start:peer": "cd peer && npm start",
    "start": "concurrently \"npm run start:relay\" \"npm run start:peer\"",
    "clean": "rm -rf relay/node_modules peer/node_modules",
    "build": "cd peer && npm run build",
    "setup": "node setup.js",
    "deploy": "npm run setup && echo 'Ready for deployment! See DEPLOYMENT.md for next steps.'",
    "test:firefox": "npm run build && playwright test --browser=firefox test",
    "test:chrome": "npm run build && playwright test test",
    "test": "npm run build && test-browser-example test"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "test-ipfs-example": "^1.0.0"
  },
  "keywords": [
    "libp2p",
    "peer-to-peer",
    "browser",
    "pubsub",
    "webrtc",
    "relay"
  ]
}
